<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_center"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/donor7" />

    <TextView
        android:id="@+id/donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Donor App"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/image_center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="      Donor App adalah aplikasi yang berguna untuk mengetahui sistem informasi keteersediaan darah pada cakupan yang lebih luas yaitu disetiap unnit PMI dan beberapa propinsi di Indonesia. Dengan adanya aplikasi ini, masyarakat mendapat informasi terkait stok data stok darah serta jadwal donor darah."
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />


</RelativeLayout>